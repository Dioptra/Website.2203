@page "/"

@inherits ComponentBase


<HeadAndMetaContent Title="Dioptra - real estate financial analytics"
                    Description="Dioptra provides sophisticated, banking grade financial analytics to institutional real estate investors."
                    OpenGraphImage=""
                    TwitterImage="">
    @foreach (var item in CarouselData)
    {
        <link rel="prefetch" href="@item.Uri" as="image">
    }
</HeadAndMetaContent>

<GeneralPageLayout @ref="@GeneralPageLayout" ColorClass="dw-yellow" >
    <div class="dw-section-condensed dw-hero">
        <div class="dw-max-width-content">
            <div class="mdc-layout-grid">
                <div class="mdc-layout-grid__inner">
                    <div class="mdc-layout-grid__cell--span-12">
                        <div class="dw-panel-container dw-carousel-container">
                            <MBCarousel Context="item"
                                        Items="@CarouselData"
                                        RolloverInterval="4000">
                                <Content>
                                    <img src="@item.Uri" alt="@item.Caption">
                                    <div><p class="mdc-typography--caption" style="text-align: center;">@item.Caption</p></div>
                                </Content>
                            </MBCarousel>
                        </div>
                    </div>
                </div>

                <div class="mdc-layout-grid__inner dw-skyline">
                    <div class="mdc-layout-grid__cell--span-12 dw-tagline">
                        <h2 class="mdc-typography--headline2">A new FinTech company</h2>
                        <h3 class="mdc-typography--headline4">bringing forward looking investment analytics to institutional real estate investors</h3>
                        <MBButton ButtonStyle="@MBButtonStyle.ContainedUnelevated" Label="Join the Waitlist" TrailingIcon="email" @onclick="@OpenDialogAsync" />
                    </div>
                </div>

                <div class="mdc-layout-grid__inner">
                    <div class="mdc-layout-grid__cell--span-12 dw-tagline">
                        <h2 class="mdc-typography--headline2">A new FinTech company</h2>
                        <h3 class="mdc-typography--headline4">bringing forward looking investment analytics to institutional real estate investors</h3>
                        <MBButton ButtonStyle="@MBButtonStyle.ContainedUnelevated" Label="Join the Waitlist" TrailingIcon="email" @onclick="@OpenDialogAsync" />
                    </div>

                    <div class="mdc-layout-grid__cell--span-4">
                        <h3 class="mdc-typography--headline3">It's about funds</h3>
                    </div>

                    <div class="mdc-layout-grid__cell--span-4">
                        <h3 class="mdc-typography--headline3">What we'll do for you</h3>
                    </div>

                    <div class="mdc-layout-grid__cell--span-4">
                        <h3 class="mdc-typography--headline3">Portfolio performance</h3>
                    </div>

                    <div class="mdc-layout-grid__cell--span-4">
                        <h3 class="mdc-typography--headline3">Exposing risk</h3>
                    </div>

                    <div class="mdc-layout-grid__cell--span-4">
                        <h3 class="mdc-typography--headline3">Revealing opportunity</h3>
                    </div>

                    <div class="mdc-layout-grid__cell--span-4">
                        <h3 class="mdc-typography--headline3">Modern technology</h3>
                    </div>

                    <div class="mdc-layout-grid__cell--span-12">
                        <p class="mdc-typography--body1">We're an enterprise FinTech/PropTech startup delivering forward looking financial analytics for institutional real estate investors.</p>

                        <ul class="mdc-typography--body2">
                            <li style="margin-top: 30px;">Vectis is our first product, deployed with <a href="https://www.clearwellcapital.co.uk" target="_blank">Clearwell Capital</a> and managing their mezzanine and stretch senior development loan portfolio.</li>
                            <li>During 2022 we will start to expand our product line to address a borad range of Commercial Real Estate investment analytical requirements.</li>
                            <li>We take a unique approach combining financial accuracy for a clear capital structure analysis with sophisticated forecasting methodologies.</li>
                            <li style="margin-top: 30px;">Our products are delivered online as "Software as a Service". You just log into Dioptra from your browser and have access to rich analytics from any computer or tablet.</li>
                            <li>We do this with a modern technology stack, maintain a full and permanent data audit trail and employ strong security measures, including conducting periodic pentration tests.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="dw-section-condensed dw-dark">
        <div class="dw-max-width-content">
            <div class="mdc-layout-grid">
                <div class="mdc-layout-grid__inner">
                    <div class="mdc-layout-grid__cell--span-12">
                        <div class="dw-panel-container">
                            <QuoteIcon />
                            <p class="mdc-typography--subtitle2 dw-quote">
                                Dioptra drives our loan book management and gives us an unparalleled insight into both individual loan and broad portfolio risks. No other loan system or real estate analytics provider we have seen comes close.
                                Dioptra is by far the best property loan management platform that we have come across.
                            </p>
                            <p class="mdc-typography--body1 dw-quoted">Ed Marley-Shaw, CEO <a href="https://www.clearwellcapital.co.uk" target="_blank">Clearwell Capital</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="dw-section-regular">
        <div class="dw-max-width-content">
            <div class="mdc-layout-grid">
                <div class="mdc-layout-grid__inner">
                    <div class="mdc-layout-grid__cell--span-6-desktop mdc-layout-grid__cell--span-4 dw-card-cell-span">
                        <div class="dw-card-container">
                            <MBCard class="mb-basic-with-header mb-ui-control dw-link-card"
                                    CardStyle="@MBCardStyle.Default"
                                    @onclick="@WorkForUsClick" >

                                <PrimaryAction>
                                    <div class="mb-card__autostyled">
                                        <div class="dw-card-content">
                                            <h3 class="mb-card__title mdc-typography--headline3">Work for Dioptra</h3>
                                            <p class="mdc-typography--subtitle1">
                                                Dioptra will soon be hiring technolgists and financial analysts to dramatcally
                                                enhance its PropTech/FinTech enterprise SaaS product offering. 
                                            </p>
                                            <p class="mdc-typography--subtitle1 dw-more">more <MBIcon IconName="navigate_next" /></p>
                                        </div>
                                    </div>
                                </PrimaryAction>
                            </MBCard>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</GeneralPageLayout>

                                            

<MBDialog class="dw-dialog"
          EscapeKeyAction=""
          @ref="@Dialog"
          ScrimClickAction=""
          Title="Join the Client Waitlist">
    <Body>
        <EditForm Model="@RealEstateInvestorEnquiry"
                  OnValidSubmit="@DialogSubmittedAsync">

            <DataAnnotationsValidator />

            <MBTextField @bind-Value="@RealEstateInvestorEnquiry.Name"
                         Label="Name"
                         style="width: 100%; margin-top: 6px;"
                         TextInputStyle="@MBTextInputStyle.Outlined"
                         ValidationMessageFor="@(() => RealEstateInvestorEnquiry.Name)" />


            <MBTextField @bind-Value="@RealEstateInvestorEnquiry.Email"
                         Label="Email"
                         style="width: 100%; margin-top: 6px;"
                         TextInputStyle="@MBTextInputStyle.Outlined"
                         ValidationMessageFor="@(() => RealEstateInvestorEnquiry.Email)" />

            <MBTextField @bind-Value="@RealEstateInvestorEnquiry.Phone"
                         Label="Phone Number"
                         style="width: 100%; margin-top: 6px;"
                         TextInputStyle="@MBTextInputStyle.Outlined"
                         ValidationMessageFor="@(() => RealEstateInvestorEnquiry.Phone)" />

            <MBTextField @bind-Value="@RealEstateInvestorEnquiry.CompanyName"
                         Label="Company Name"
                         style="width: 100%; margin-top: 6px;"
                         TextInputStyle="@MBTextInputStyle.Outlined"
                         ValidationMessageFor="@(() => RealEstateInvestorEnquiry.CompanyName)" />

            <MBTextField @bind-Value="@RealEstateInvestorEnquiry.Website"
                         Label="Website"
                         style="width: 100%; margin-top: 6px;"
                         TextInputStyle="@MBTextInputStyle.Outlined"
                         ValidationMessageFor="@(() => RealEstateInvestorEnquiry.Website)" />

            <MBTextArea @bind-Value="@RealEstateInvestorEnquiry.HowCanWeHelp"
                        Label="How can we help you?"
                        Rows="5"
                        style="width: 100%; margin-top: 6px;"
                        TextInputStyle="@MBTextInputStyle.Outlined"
                        ValidationMessageFor="@(() => RealEstateInvestorEnquiry.HowCanWeHelp)" />

            <div class="mdc-layout-grid__cell--span-12" style="text-align: right;">
                <MBButton Label="Send"
                          ButtonStyle="@MBButtonStyle.ContainedUnelevated"
                          style="margin: 0.75em 0.25em 0.25em 0.25em;"
                          type="submit" />

                <MBButton Label="Cancel"
                          ButtonStyle="@MBButtonStyle.ContainedUnelevated"
                          @onclick="@CloseDialogAsync"
                          style="margin: 0.75em 0.25em 0.25em 0.25em;"
                          type="button" />
            </div>
        </EditForm>
    </Body>
</MBDialog>