@page "/"

@inherits ComponentBase


<HeadContent>
    <meta name="description" content="This is Dioptra">
</HeadContent>

<MBButton Label="Throw" @onclick="@(() => throw new Exception("Boo"))" />

<div class="dw-section-regular">
    <div class="dw-max-width-content">
        <div class="mdc-layout-grid">
            <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell--span-6-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
                    <h2 class="mb-card__title mdc-typography--headline1">Who we are</h2>
                    <p class="mb-card__title mdc-typography--body1">
                        Dioptra is a startup developing sophisticated financial analytics for institutional real estate investors.
                    </p>
                </div>

                <div class="mdc-layout-grid__cell--span-4-phone dw-hidden-desktop-up dw-section-spacing"></div>

                <div class="mdc-layout-grid__cell--span-6-desktop mdc-layout-grid__cell--span-8-tablet mdc-layout-grid__cell--span-4-phone">
                    <h2 class="mb-card__title mdc-typography--headline1">What we are doing</h2>
                    <p class="mb-card__title mdc-typography--body1">
                        Dioptra is a startup developing sophisticated financial analytics for institutional real estate investors.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="dw-section-condensed dw-amber">
    <div class="dw-max-width-content">
        <div class="mdc-layout-grid">
            <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell--span-12">
                    <div class="dw-panel-container">
                        <p class="mb-card__title mdc-typography--subtitle2">
                            "Dioptra is is beyond class leading; it defines a new class of investment analytics. Dioptra drives our treasury loan book management
                            and gives us an unparalleled insight into portfolio risk."
                        </p>
                        <p class="mb-card__title mdc-typography--subtitle1">
                            CEO, Client
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="dw-section-regular">
    <div class="dw-max-width-content">
        <div class="mdc-layout-grid">
            <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell--span-6-desktop mdc-layout-grid__cell--span-4 dw-card-cell-span">
                    <div class="dw-card-container">
                        <MBCard class="mb-basic-with-header mb-ui-control"
                                CardStyle="@MBCardStyle.Default">

                            <PrimaryAction>
                                <div class="mb-card__autostyled">
                                    <div class="dv-action-card-content">
                                        <h3 class="mb-card__title mdc-typography--headline3">Real Estate Investment Funds</h3>
                                    </div>
                                </div>
                            </PrimaryAction>
                        </MBCard>
                    </div>
                </div>

                <div class="mdc-layout-grid__cell--span-12 dw-hidden-tablet-up dw-section-spacing"></div>
                
                <div class="mdc-layout-grid__cell--span-6-desktop mdc-layout-grid__cell--span-4 dw-card-cell-span">
                    <div class="dw-card-container">
                        <MBCard class="mb-basic-with-header mb-ui-control"
                                CardStyle="@MBCardStyle.Default">

                            <PrimaryAction>
                                <div class="mb-card__autostyled">
                                    <div class="dv-action-card-content">
                                        <h3 class="mb-card__title mdc-typography--headline3">Venture Capital Investors</h3>
                                    </div>
                                </div>
                            </PrimaryAction>
                        </MBCard>
                    </div>
                </div>

                <div class="mdc-layout-grid__cell--span-12 dw-section-spacing"></div>
                
                <div class="mdc-layout-grid__cell--span-3-desktop mdc-layout-grid__cell--span-2 dw-hidden-phone-down"></div>

                <div class="mdc-layout-grid__cell--span-6-desktop mdc-layout-grid__cell--span-4 dw-card-cell-span">
                    <div class="dw-card-container">
                        <MBCard class="mb-basic-with-header mb-ui-control"
                                CardStyle="@MBCardStyle.Default"
                                @onclick="@WorkForUsClick" >

                            <PrimaryAction>
                                <div class="mb-card__autostyled">
                                    <div class="dv-action-card-content">
                                        <h3 class="mb-card__title mdc-typography--headline3">Work for Dioptra</h3>
                                    </div>
                                </div>
                            </PrimaryAction>
                        </MBCard>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
