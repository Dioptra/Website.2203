@inherits ComponentBase


@if (ShowBanner)
{
    <div class="mdc-layout-grid dw-cookie-alert dw-dark mdc-elevation--z5 " role="alert">
        <div class="mdc-layout-grid__inner">
            <div class="mdc-layout-grid__cell--span-12 dw-cookie-alert-content">
                <p class="mdc-typography--body1">We only use cookies that are essential to show this website and for Google Analytics</p>

                <MBButton ButtonStyle="@MBButtonStyle.ContainedRaised"
                          Label="Hide Message"
                          @onclick="AcceptCookie"/>
            </div>
        </div>
    </div>
}
