@page "/Host"
@using Microsoft.AspNetCore.Components.Web
@using Website.Lib
@namespace Website.Server.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    RenderMode RenderMode = PlatformDetermination.IsBlazorServer ? RenderMode.ServerPrerendered : RenderMode.WebAssembly;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes" />
    <meta name="theme-color" content="#FFD230" />

    <title>Dioptra</title>
    <base href="/" />

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://use.typekit.net/zjb3qsk.css">

    <link rel="stylesheet" type="text/css" href="_content/Material.Blazor/material.blazor.min.css" />
    <link rel="stylesheet" type="text/css" id="app-theme" href="_content/Website.Lib/css/dioptra.min.css" />

    <link rel="icon" type="image/png" href="_content/Website.Lib/pwa/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="_content/Website.Lib/pwa/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="_content/Website.Lib/pwa/favicon-96x96.png" sizes="96x96">

    <link rel="apple-touch-icon" sizes="512x512" href="_content/Website.Lib/ios-images/512.png" />
    <link rel="apple-touch-icon" sizes="192x192" href="_content/Website.Lib/ios-images/192.png" />

@if (PlatformDetermination.IsBlazorServer)
{
    <link rel="manifest" href="manifest.json" />
}
</head>
<body>
    <div id="app">

        <svg class="loading-progress">
            <circle r="40%" cx="50%" cy="50%" />
            <circle r="40%" cx="50%" cy="50%" />
        </svg>
        <div class="loading-progress-text"></div>

    </div>

    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_content/Material.Blazor/material.blazor.min.js" ></script>
    <script src="_content/Website.Lib/js/dioptra.min.js" ></script>

    @if (PlatformDetermination.IsBlazorServer)
    {
        <script src="_framework/blazor.server.js" ></script>
    }
    else
    {
        <script src="_framework/blazor.webassembly.js" ></script>
    }

</body>
</html>
